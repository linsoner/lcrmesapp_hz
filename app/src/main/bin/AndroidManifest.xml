<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.dyg.siginprint">
    <!-- 访问网络 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- WIFI -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 安装权限 -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <!-- 文件读写 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- 条形码扫描 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!--
           (1)android:networkSecurityConfig="@xml/network_security_config"//解决android9.0无法使用http请求的问题
          （2）android:requestLegacyExternalStorage="true" 解决Android10(API 29)时无读写权限-->
    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/icon_app"
        android:roundIcon="@mipmap/icon_app"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:usesCleartextTraffic="true"
        tools:replace="android:label"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".main.view.MainActivity"
            android:screenOrientation="nosensor"
            android:theme="@style/TranslucentTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login.view.LoginActivity"
            android:screenOrientation="nosensor"
            android:theme="@style/TranslucentTheme"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden"/>
        <activity android:name=".login.view.RightUpgradeActivity"
            android:screenOrientation="nosensor"
            android:theme="@style/ActivityDialogStyle"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"
            />
        <activity android:name=".login.view.ServerSetActivity"
            android:screenOrientation="nosensor"
            android:theme="@style/TranslucentTheme"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"/>
        <activity android:name=".sigin.view.SiginCheckingActivity"
            android:screenOrientation="nosensor"
            android:theme="@style/TranslucentTheme"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"/>
        <provider
            android:name=".update.UpdateFileProvider"
            android:authorities="com.dyg.siginprint.updatefileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider" />
        </provider>
    </application>

</manifest>