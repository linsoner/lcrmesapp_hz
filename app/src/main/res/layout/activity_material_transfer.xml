<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            android:id="@+id/rl_depart_top"
            layout="@layout/view_title_layout"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_space_row_base"
            android:paddingBottom="@dimen/dp_space_col_min"
            android:paddingRight="@dimen/dp_space_row_base"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="来源单号："
                android:textColor="@color/text" />
            <com.dyg.siginprint.wiget.textview.ClearEditText
                android:id="@+id/sourceNoEt"
                android:layout_width="wrap_content"
                android:layout_weight="100"
                android:layout_height="wrap_content"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="*生产部门："
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_14" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_text_base"
                    android:text="*"
                    android:visibility="invisible"/>
                <LinearLayout
                    android:id="@+id/customerCodeId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/bg_edit_box"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/customerCodeTv"
                        android:layout_width="wrap_content"
                        android:layout_weight="100"
                        android:paddingLeft="@dimen/dp_6"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/xiangxia"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="领料工序："
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_14" />
                <LinearLayout
                    android:id="@+id/toCustomerCodeId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/bg_edit_box"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/processTv"
                        android:layout_width="wrap_content"
                        android:layout_weight="100"
                        android:paddingLeft="@dimen/dp_6"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/xiangxia"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_14"
                    android:text="*调入仓库："/>
                <LinearLayout
                    android:id="@+id/toStorageId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/bg_edit_box"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/toStorageTv"
                        android:layout_width="wrap_content"
                        android:layout_weight="100"
                        android:paddingLeft="@dimen/dp_6"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/xiangxia"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="*调出仓库："
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_14" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_text_base"
                    android:text="*"
                    android:visibility="invisible"/>
                <LinearLayout
                    android:id="@+id/storageId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/bg_edit_box"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/storageTv"
                        android:layout_width="wrap_content"
                        android:layout_weight="100"
                        android:paddingLeft="@dimen/dp_6"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/xiangxia"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_14"
                    android:text="调入库位："/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_text_base"
                    android:text="*"
                    android:visibility="invisible"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/bg_edit_box"
                    android:orientation="horizontal">
                    <com.dyg.siginprint.wiget.textview.ClearEditText
                        android:id="@+id/toLocEt"
                        android:layout_width="wrap_content"
                        android:layout_weight="100"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text"
                android:textSize="@dimen/sp_text_base"
                android:text="空"
                android:visibility="invisible"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_14"
                    android:text="调出库位："/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/bg_edit_box"
                    android:orientation="horizontal">
                    <com.dyg.siginprint.wiget.textview.ClearEditText
                        android:id="@+id/locEt"
                        android:layout_width="wrap_content"
                        android:layout_weight="100"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_space_row_base"
            android:paddingBottom="@dimen/dp_5"
            android:paddingRight="@dimen/dp_space_row_base"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text"
                    android:text="*条码："/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_text_base"
                    android:text="空空"
                    android:visibility="invisible"/>
                <com.dyg.siginprint.wiget.textview.ClearEditText
                    android:id="@+id/qr_codeEt"
                    android:layout_weight="100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_space_row_base"
            android:paddingRight="@dimen/dp_space_row_base"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="40">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:textColor="@color/text"
                   android:textSize="@dimen/sp_text_base"
                   android:text="总箱数："/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:textColor="@color/text"
                   android:textSize="@dimen/sp_text_base"
                   android:text="空*"
                   android:visibility="invisible"/>
               <TextView
                   android:id="@+id/totalBoxTv"
                   android:layout_width="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:gravity="center_vertical|left"
                   android:paddingLeft="5dp"
                   android:paddingRight="5dp"
                   android:layout_weight="40"
                   android:layout_height="@dimen/dp_editbox_hight"
                   android:background="@drawable/bg_edit_box"/>
           </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="40">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_text_base"
                    android:text="空"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_text_base"
                    android:text="数量合计："/>
                <TextView
                    android:id="@+id/numSumTv"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="40"
                    android:layout_height="@dimen/dp_editbox_hight"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/bg_edit_box"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_editbox_hight"
            android:paddingLeft="@dimen/dp_space_row_base"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_editbox_hight"
                android:minWidth="60dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_save"
                    android:layout_width="wrap_content"
                    android:layout_weight="10"
                    android:layout_height="26dp"
                    android:layout_marginRight="@dimen/dp_space_row_sm"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_space_row_base"
                    android:paddingRight="@dimen/dp_space_row_base"
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_text_base"
                    android:background="@drawable/frame_fill_blue_2"
                    android:text="保存"/>

                <TextView
                    android:id="@+id/tv_temporary_storage"
                    android:layout_width="wrap_content"
                    android:layout_weight="10"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/dp_space_row_sm"
                    android:paddingLeft="@dimen/dp_space_row_base"
                    android:paddingRight="@dimen/dp_space_row_base"
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_text_base"
                    android:background="@drawable/frame_fill_blue_2"
                    android:text="暂存"/>

                <TextView
                    android:id="@+id/tv_clearing"
                    android:layout_width="wrap_content"
                    android:layout_weight="10"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/dp_space_row_sm"
                    android:paddingLeft="@dimen/dp_space_row_base"
                    android:paddingRight="@dimen/dp_space_row_base"
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_text_base"
                    android:background="@drawable/frame_fill_blue_2"
                    android:text="清空"/>

                <TextView
                    android:id="@+id/tv_deleteRow"
                    android:layout_width="wrap_content"
                    android:layout_weight="10"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/dp_12"
                    android:paddingLeft="@dimen/dp_space_row_base"
                    android:paddingRight="@dimen/dp_space_row_base"
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_text_base"
                    android:background="@drawable/frame_fill_blue_2"
                    android:text="删除行"/>
            </LinearLayout>
        </LinearLayout>

        <com.dyg.siginprint.HRecycleView.HRecyclerView
            android:id="@+id/jit_hrecyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_weight="1000">
        </com.dyg.siginprint.HRecycleView.HRecyclerView>

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="16sp"
            android:visibility="gone"
            android:text=""/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>