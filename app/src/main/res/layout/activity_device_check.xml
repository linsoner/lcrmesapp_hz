<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent">

        <include
            android:id="@+id/rl_depart_top"
            layout="@layout/view_title_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_space_row_base"
            android:paddingRight="@dimen/dp_space_row_base"
            android:paddingBottom="@dimen/dp_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="*设备编号："
                    android:textColor="@color/text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="1"
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_text_base"
                    android:visibility="invisible" />

                <com.dyg.siginprint.wiget.textview.ClearEditText
                    android:id="@+id/qr_deviceSNEt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="100" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:paddingLeft="@dimen/dp_space_row_base"
            android:paddingRight="@dimen/dp_space_row_base">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="40">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="设备名称："
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_text_base" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="*1"
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_text_base"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/deviceNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_editbox_hight"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_edit_box"
                    android:layout_weight="40"
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical|left"
                    />
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="*周期："
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="空空1"
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_text_base"
                    android:visibility="invisible" />

                <LinearLayout
                    android:id="@+id/selectWeekId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edit_box"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/selectWeekTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:paddingLeft="@dimen/dp_6"></TextView>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/xiangxia" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_space_row_base"
            android:paddingRight="@dimen/dp_space_row_base">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="40">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="备注："
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_text_base" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="*空空1"
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_text_base"
                    android:visibility="invisible" />

                <com.dyg.siginprint.wiget.textview.MyEditText
                    android:id="@+id/remarkTv"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_editbox_hight"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="40"
                    />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_editbox_hight"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_space_row_base">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_editbox_hight"
                android:minWidth="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_save"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_space_row_sm"
                    android:layout_weight="10"
                    android:background="@drawable/frame_fill_blue_2"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_space_row_base"
                    android:paddingRight="@dimen/dp_space_row_base"
                    android:text="保存"
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_text_base" />


                <TextView
                    android:id="@+id/tv_clearing"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_space_row_sm"
                    android:layout_weight="10"
                    android:background="@drawable/frame_fill_blue_2"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_space_row_base"
                    android:paddingRight="@dimen/dp_space_row_base"
                    android:text="清空"
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_text_base" />

            </LinearLayout>
        </LinearLayout>

        <com.dyg.siginprint.HRecycleView.HRecyclerView
            android:id="@+id/jit_hrecyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_weight="1000">
        </com.dyg.siginprint.HRecycleView.HRecyclerView>

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="16sp"
            android:visibility="gone"
            android:text=""/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>