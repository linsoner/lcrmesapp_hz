<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/rl_depart_top"
        layout="@layout/view_title_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_space_row_base"
        android:layout_marginTop="@dimen/dp_space_col_sm"
        android:paddingBottom="@dimen/dp_space_col_min"
        android:paddingRight="@dimen/dp_space_row_base"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text"
            android:textSize="@dimen/sp_text_base"
            android:text="出库单："/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text"
            android:textSize="@dimen/sp_text_base"
            android:text="空"
            android:visibility="invisible"/>
        <com.dyg.siginprint.wiget.textview.ClearEditText
            android:id="@+id/et_billno"
            android:layout_width="wrap_content"
            android:layout_weight="100"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/ll_check"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_editbox_hight"
            android:paddingLeft="@dimen/dp_space_row_base"
            android:minWidth="48dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_check"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/unchecked"
                android:layout_marginRight="@dimen/dp_space_row_min"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:textSize="@dimen/sp_text_base"
                android:layout_marginBottom="1dp"
                android:layout_gravity="center_vertical"
                android:text="内"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_space_row_base"
        android:paddingBottom="@dimen/dp_space_col_min"
        android:paddingRight="@dimen/dp_space_row_base"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text"
            android:text="客户："/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text"
            android:textSize="@dimen/sp_text_base"
            android:text="空空"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/tv_customer"
            android:layout_width="wrap_content"
            android:layout_weight="100"
            android:layout_height="@dimen/dp_editbox_hight"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:background="@drawable/bg_edit_box"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_space_row_base"
        android:paddingBottom="@dimen/dp_space_col_min"
        android:paddingRight="@dimen/dp_space_row_base"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text"
            android:textSize="@dimen/sp_text_base"
            android:text="条码："/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text"
            android:textSize="@dimen/sp_text_base"
            android:text="空空"
            android:visibility="invisible"/>
        <com.dyg.siginprint.wiget.textview.ClearEditText
            android:id="@+id/et_barcode"
            android:layout_width="wrap_content"
            android:layout_weight="100"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_editbox_hight"
            android:paddingLeft="@dimen/dp_space_row_base"
            android:minWidth="48dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_one_dimensiona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:textSize="@dimen/sp_text_base"
                android:gravity="center_vertical"
                android:layout_marginBottom="1dp"
                android:layout_gravity="center_vertical"
                android:text="0/0"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_space_row_base"
        android:paddingBottom="@dimen/dp_space_col_min"
        android:paddingRight="@dimen/dp_space_row_base"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text"
            android:textSize="@dimen/sp_text_base"
            android:text="条码张数："/>
        <TextView
            android:id="@+id/tv_barcode_count"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:minWidth="60dp"
            android:layout_height="@dimen/dp_editbox_hight"
            android:background="@drawable/bg_edit_box"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_editbox_hight"
            android:paddingLeft="@dimen/dp_space_row_base"
            android:minWidth="60dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_save"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginRight="@dimen/dp_space_row_sm"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_space_row_base"
                android:paddingRight="@dimen/dp_space_row_base"
                android:textColor="@color/text"
                android:textSize="@dimen/sp_text_base"
                android:background="@drawable/frame_fill_blue_2"
                android:text="保存"/>
            <TextView
                android:id="@+id/tv_temporary_storage"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_space_row_base"
                android:paddingRight="@dimen/dp_space_row_base"
                android:textColor="@color/text"
                android:textSize="@dimen/sp_text_base"
                android:background="@drawable/frame_fill_blue_2"
                android:text="暂存"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_space_row_base"
        android:paddingRight="@dimen/dp_space_row_base"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text"
            android:textSize="@dimen/sp_text_base"
            android:text="数量合计："/>
        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:minWidth="60dp"
            android:layout_height="@dimen/dp_editbox_hight"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/bg_edit_box"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_editbox_hight"
            android:paddingLeft="@dimen/dp_space_row_base"
            android:minWidth="60dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_clearing"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginRight="@dimen/dp_space_row_sm"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_space_row_base"
                android:paddingRight="@dimen/dp_space_row_base"
                android:textColor="@color/text"
                android:textSize="@dimen/sp_text_base"
                android:background="@drawable/frame_fill_blue_2"
                android:text="清零"/>
            <TextView
                android:id="@+id/tv_rescan"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_space_row_base"
                android:paddingRight="@dimen/dp_space_row_base"
                android:textColor="@color/text"
                android:textSize="@dimen/sp_text_base"
                android:background="@drawable/frame_fill_blue_2"
                android:text="重扫"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit_box"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <LinearLayout
            android:id="@+id/ll_head"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_editbox_hight">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/text"
                android:textSize="@dimen/sp_text_base"
                android:textStyle="bold"
                android:background="@drawable/bg_itembox_gray_top_left"
                android:text="客户料号"/>

            <TextView
                android:layout_width="71dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@drawable/bg_itembox_gray"
                android:gravity="center"
                android:text="数量"
                android:textColor="@color/text"
                android:textSize="@dimen/sp_text_base"
                android:textStyle="bold" />

            <TextView
                android:layout_width="51dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@drawable/bg_itembox_gray"
                android:gravity="center"
                android:text="周期"
                android:textColor="@color/text"
                android:textSize="@dimen/sp_text_base"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/text"
                android:textSize="@dimen/sp_text_base"
                android:textStyle="bold"
                android:background="@drawable/bg_itembox_gray"
                android:text="批号"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/text"
                android:textSize="@dimen/sp_text_base"
                android:textStyle="bold"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:background="@drawable/bg_itembox_gray_top_right"
                android:text="公司料号"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_scan_result"
            android:layout_below="@+id/ll_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</LinearLayout>